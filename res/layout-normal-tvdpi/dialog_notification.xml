<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadow" >

    <RelativeLayout
        android:id="@+id/notification_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/notification_bg" >

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="26dp"
            android:text="@string/notification_title"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_title_size" />

        <RelativeLayout
            android:id="@+id/notification_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_title"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/notification_dialog" >

            <ImageView
                android:id="@+id/notification_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:src="@drawable/notification_storytelling" />

            <TextView
                android:id="@+id/notification_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notification_image"
                android:layout_below="@+id/notification_image"
                android:layout_marginTop="18dp"
                android:text="@string/notification_title"
                android:textColor="@color/orange"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/notification_comment"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notification_image"
                android:layout_below="@+id/notification_subtitle"
                android:layout_marginTop="12dp"
                android:text="@string/notification_title"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/notification_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notification_dialog"
            android:layout_below="@+id/notification_dialog"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="12dp"
            android:text="@string/cancel"
            android:textColor="@color/lite_gray"
            android:textSize="@dimen/normal_title_size" />

        <TextView
            android:id="@+id/notification_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/notification_dialog"
            android:layout_below="@+id/notification_dialog"
            android:layout_marginRight="36dp"
            android:layout_marginTop="12dp"
            android:text="@string/goto_"
            android:textColor="@color/lite_orange"
            android:textSize="@dimen/normal_title_size" />
    </RelativeLayout>

</FrameLayout>