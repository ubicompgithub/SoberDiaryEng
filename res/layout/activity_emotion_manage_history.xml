<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmotionManageHistoryActivity" 
    >
    
    	<LinearLayout 
    	    android:id="@+id/emotion_manage_title_layout"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="vertical"
    	    >
    	</LinearLayout>

    	<ScrollView
    	    android:id="@+id/emotion_manage_main_scroll"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_below="@+id/emotion_manage_title_layout"
    	    android:background="@drawable/activity_bg" >

        <LinearLayout
            android:id="@+id/emotion_manage_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            />
    </ScrollView>
</RelativeLayout>